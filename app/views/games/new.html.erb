 <div class=text-center>
<h1>New Game</h1>

<ul class="list-inline"><% @letters.each do |letter| %>
  <li><%= letter %></li>
<% end %> </ul>
</div>

<div class=text-center>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="form-group">
    <label for="input">What is the longest word you can find ?</label>
  </div>
  <div class="form-group">
    <input type="text" name="word" placeholder="you w ord here">
  </div>
  <div class="form-group">
    <input type="submit" value="play">
  </div>
</form>
</div>
